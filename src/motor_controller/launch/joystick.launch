<launch>
  <!-- Use simulated time -->
  <param name="use_sim_time" value="true" />

  <!-- Start the motor controller for joystick -->
  <node name="joystick_motor_controller" pkg="motor_controller" type="joystick_controller" output="screen" />

  <!-- Start the joystick driver -->
  <node name="joy_node" pkg="joy" type="joy_node" output="screen">
    <param name="dev" value="/dev/input/js0" />
    <param name="deadzone" value="0.1" />
    <param name="autorepeat_rate" value="20.0" />
  </node>
</launch>
